{
  "extends": "tslint-config-standard",
  "rules": {
    "semicolon": [true, "always"],
    "quotemark": [true, "double"],
    "space-before-function-paren": false,
    "indent": [true, "tabs", 2],
    "ter-indent": [
      true, "tab",
      {
        "SwitchCase": 1
      }
    ],
    "new-parens": false,
    "trailing-comma": false,
    "max-line-length": [true, 105],
    "prefer-const": true
  }
}
