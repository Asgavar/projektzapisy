{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "alwaysStrict": true,
    "strict": true,
    "module": "es2015",
    "baseUrl": "./assets",
    "typeRoots": [
      "./node_modules/@types",
      "./webpack_resources/typings"
    ]
  },
  "exclude": [
    "./node_modules",
    // This contains webpack configs etc, which are also .ts files
    "./webpack_resources/",
  ]
}
