{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "baseUrl": "./assets",
    "noUnusedParameters": true,
    "typeRoots": [
      "./node_modules/@types",
      "./webpack_resources/typings"
    ],
    "types":[
      "jquery",
      "react",
      "react-dom",
      "react-table",
      "csstype",
      "styled-components"
    ]
  },
  "exclude": [
    "./node_modules",
    // This contains webpack configs etc, which are also .ts files
    "./webpack_resources/",
  ]
}
